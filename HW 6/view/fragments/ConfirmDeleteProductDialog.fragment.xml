        <Label class="sapUiSmallMargin" text="Are you sure you want to delete this product?"/>
        <buttons>
            <Button text="Submit" press="onSubmitDeleteProduct" />
            <Button text="Cancel" press="onCancelPress" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>