<core:FragmentDefinition xmlns="sap.m" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>deleteProduct}" afterClose="onAfterClose">
        <Label class="sapUiSmallMargin" text="{i18n>deleteProductConfirm}"/>
        <buttons>
            <Button text="{i18n>submit}" press="onSubmitDeleteProduct" />
            <Button text="{i18n>close}" press="onCancelPress" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>